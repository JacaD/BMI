<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoActivity">

    <TextView
            android:textSize="60sp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp" tools:layout_editor_absoluteY="100dp"
            tools:layout_editor_absoluteX="90dp" android:id="@+id/info_TV" android:layout_marginTop="23dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="199dp"/>
    <TextView
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="530dp"
            android:layout_height="wrap_content" android:id="@+id/description_TV"
            android:layout_toStartOf="@+id/info_image_IV" android:layout_marginEnd="75dp"
            android:layout_marginTop="18dp" android:layout_below="@+id/info_TV"/>
    <ImageView
            android:src="@drawable/underweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/info_image_IV"
            android:layout_marginTop="11dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="9dp"/>
</RelativeLayout>